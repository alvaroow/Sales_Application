<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvCARD_KATEGORI"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="10dp"
    app:strokeColor="#000000"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="15dp"
    app:cardElevation="6dp"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/iconCard"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iviconKategori"
                android:layout_width="45dp"
                android:layout_height="47dp"
                android:background="@drawable/kategori"
                android:backgroundTint="#333333"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:text="Kategori"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/iconCard"
            app:layout_constraintEnd_toEndOf="@id/iconCard"
            app:layout_constraintTop_toTopOf="@id/iconCard" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAdd"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Aktif"
            app:layout_constraintTop_toTopOf="@id/iconCard"
            app:layout_constraintBottom_toBottomOf="@id/iconCard"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14sp"

            app:chipIcon="@drawable/checklist"
            app:chipIconSize="18dp"
            app:chipIconVisible="true"

            app:chipBackgroundColor="@android:color/transparent"
            app:chipStrokeWidth="1dp"
            app:chipStrokeColor="#000000"

            app:chipCornerRadius="5dp"
            app:rippleColor="#000000"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>